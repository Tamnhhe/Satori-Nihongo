<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Add missing column template_name to quiz with safe preconditions -->
    <changeSet id="20250810013000-1" author="system">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="quiz"/>
            <not>
                <columnExists tableName="quiz" columnName="template_name"/>
            </not>
        </preConditions>
        <addColumn tableName="quiz">
            <column name="template_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
