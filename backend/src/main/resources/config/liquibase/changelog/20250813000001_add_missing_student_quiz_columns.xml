<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Add missing columns to student_quiz table
    -->
    <changeSet id="20250813000001-1" author="system">
        <addColumn tableName="student_quiz">
            <column name="paused" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="pause_time" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="resume_time" type="${datetimeType}">
                <constraints nullable="true"/>
            </column>
            <column name="total_pause_duration_seconds" type="integer" defaultValueNumeric="0">
                <constraints nullable="true"/>
            </column>
            <column name="submitted_automatically" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="current_question_index" type="integer" defaultValueNumeric="0">
                <constraints nullable="true"/>
            </column>
            <column name="total_questions" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="correct_answers" type="integer" defaultValueNumeric="0">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
