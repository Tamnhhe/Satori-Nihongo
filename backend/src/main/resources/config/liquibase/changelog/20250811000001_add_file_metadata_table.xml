<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20250811000001-1" author="system">
        <createTable tableName="file_meta_data">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="original_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_path" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="file_type" type="varchar(50)"/>
            <column name="file_size" type="bigint"/>
            <column name="mime_type" type="varchar(100)"/>
            <column name="upload_date" type="timestamp"/>
            <column name="version" type="integer"/>
            <column name="checksum" type="varchar(64)"/>
            <column name="folder_path" type="varchar(500)"/>
            <column name="description" type="text"/>
            <column name="is_public" type="boolean" defaultValueBoolean="false"/>
            <column name="download_count" type="integer" defaultValueNumeric="0"/>
            <column name="last_accessed_date" type="timestamp"/>
            <column name="lesson_id" type="bigint"/>
            <column name="uploaded_by_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="20250811000001-2" author="system">
        <addForeignKeyConstraint baseColumnNames="lesson_id"
                                 baseTableName="file_meta_data"
                                 constraintName="fk_file_meta_data_lesson_id"
                                 referencedColumnNames="id"
                                 referencedTableName="lesson"/>
    </changeSet>

    <changeSet id="20250811000001-3" author="system">
        <addForeignKeyConstraint baseColumnNames="uploaded_by_id"
                                 baseTableName="file_meta_data"
                                 constraintName="fk_file_meta_data_uploaded_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"/>
    </changeSet>

    <changeSet id="20250811000001-4" author="system">
        <createIndex indexName="idx_file_meta_data_checksum" tableName="file_meta_data">
            <column name="checksum"/>
        </createIndex>
    </changeSet>

    <changeSet id="20250811000001-5" author="system">
        <createIndex indexName="idx_file_meta_data_folder_path" tableName="file_meta_data">
            <column name="folder_path"/>
        </createIndex>
    </changeSet>

    <changeSet id="20250811000001-6" author="system">
        <createIndex indexName="idx_file_meta_data_mime_type" tableName="file_meta_data">
            <column name="mime_type"/>
        </createIndex>
    </changeSet>

    <changeSet id="20250811000001-7" author="system">
        <createIndex indexName="idx_file_meta_data_upload_date" tableName="file_meta_data">
            <column name="upload_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>