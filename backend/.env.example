# Example environment variables for development
# Copy this file to .env and fill in your actual credentials

# Database Configuration
DB_PASSWORD=your_mysql_password_here

# Mail Configuration
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password_here

# OAuth2 Configuration
GOOGLE_OAUTH2_ENABLED=true
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth2 Security
OAUTH2_ENABLED=true
OAUTH2_REDIRECT_BASE_URL=http://localhost:8080
OAUTH2_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Disable other OAuth providers if not needed
FACEBOOK_OAUTH2_ENABLED=false
GITHUB_OAUTH2_ENABLED=false

# Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Replace the placeholder values with your actual credentials
# 3. Get Google OAuth2 credentials from https://console.cloud.google.com/
# 4. Generate encryption key: openssl rand -hex 16
# 5. Never commit the .env file to version control
